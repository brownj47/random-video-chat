<div class="container-fluid container-height">
  <div class="row h-100">
    {{!-- video display --}}
    <div class="col-lg-8 col-md-7 col-sm-12">
      <section id="video-grid"></section>
    </div>
    {{!-- chat box --}}
    <div class="chat-box col-lg-4 col-md-5 col-sm-12 mb-5">
      <div class="card">
        <h6 class="card-subtitle chat-box-title">
          Chat Box
        </h6>
        <div class="card-body" id="card-body">
          {{!-- setting the data attribute as the username so we can grab this in the DOM --}}
          <ul data-name="{{username}}" id="messages"></ul>
        </div>
        {{!-- chat box send button --}}
        <form id="form" action="">
          <input id="input" autocomplete="off" /><button
            class="btn btn-primary btn-sizing">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>

